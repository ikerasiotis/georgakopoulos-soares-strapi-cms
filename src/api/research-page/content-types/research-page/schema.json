      "type": "component",
      "repeatable": true,
      "component": "research.focus-area"
    },
    "focusTitle": {
      "type": "string",
      "default": "Research Focus Areas"
    },
    "focusProjectsLabel": {
      "type": "string",
      "default": "Key Projects"
    },
    "methods": {
      "type": "component",
      "repeatable": true,
      "component": "research.method"
    },
    "methodsTitle": {
      "type": "string",
      "default": "Our Methods & Technologies"
    },
    "resources": {
      "type": "component",
