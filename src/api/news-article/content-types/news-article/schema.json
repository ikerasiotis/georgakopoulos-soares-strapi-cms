{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news-article",
    "pluralName": "news",
    "displayName": "News Article",
    "description": "News articles and announcements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Grant Award",
        "Publication",
        "Team",
        "Conference",
        "Software",
        "Media",
        "Collaboration"
      ],
      "default": "Publication"
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "link": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
